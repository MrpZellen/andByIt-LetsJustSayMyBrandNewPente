<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="andByIt_LetsJustSayMyPente.MainWindow"
        Title="andByIt_LetsJustSayMyPente">
	<Grid>
		<Grid.Background>
		</Grid.Background>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Row="0" Grid.Column="0" FontSize="30"
				   HorizontalAlignment="Center" VerticalAlignment="Center">
			High Effort Pente Game
		</TextBlock>
		<StackPanel Grid.Row="0" Grid.Column="1">
			<TextBlock>
				Enter Your Name
			</TextBlock>
			<TextBox Name="P1">
			</TextBox>
			<TextBlock>
				Enter the 2nd player Name
			</TextBlock>
			<TextBox Name="P2">
			</TextBox>
		</StackPanel>
		<Image Grid.Row="1" Grid.Column="0" Source="/images/pente.png" />
		<StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
			<Button Click="NavToPvp" Margin="5">Player Vs Player</Button>
			<Button Click="NavToAI" Margin="5">Player Vs AI</Button>
		</StackPanel>
	</Grid>
</Window>
