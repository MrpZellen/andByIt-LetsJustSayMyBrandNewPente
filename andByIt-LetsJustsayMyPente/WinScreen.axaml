<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:andByIt_LetsJustSayMyPente"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
        x:Class="andByIt_LetsJustSayMyPente.WinScreen"
		x:DataType="local:WinScreen"
        Title="WinScreen">
  <Grid>
	  <Grid.ColumnDefinitions>
		  <ColumnDefinition Width="2*"></ColumnDefinition>
		  <ColumnDefinition Width="3*"></ColumnDefinition>
		  <ColumnDefinition Width="2*"></ColumnDefinition>
	  </Grid.ColumnDefinitions>
	  <Grid.RowDefinitions>
		  <RowDefinition></RowDefinition>
		  <RowDefinition></RowDefinition>
	  </Grid.RowDefinitions>
	  
	  <TextBlock Grid.Column="1" Grid.Row="0" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="ExtraBlack" FontSize="30" Margin="6" Text="YOU WIN!"></TextBlock>
	  <!--Optional Textblock for PVP, update the binded variable to change it.-->
	  <TextBlock Grid.Column="2" Grid.Row="0" TextAlignment="Center" HorizontalAlignment="Center" FontSize="20" Margin="3" Text="{Binding WinningPlayer}" TextWrapping="Wrap"></TextBlock>

	  <Button Click="" Grid.Column="0" Grid.Row="1" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" ></Button>
	  <Image Grid.Column="1" Grid.Row="1" Source="/images/text.png" />
	  <Button Click="" Grid.Column="2" Grid.Row="1" Content="Main Menu" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" ></Button>
  </Grid>
</Window>

