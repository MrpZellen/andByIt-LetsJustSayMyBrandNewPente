<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:andByIt_LetsJustSayMyPente"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
        x:Class="andByIt_LetsJustSayMyPente.LoseScreen"
		x:DataType="local:LoseScreen"
        Title="LoseScreen">
  <Grid>
	  <Grid.ColumnDefinitions>
		  <ColumnDefinition Width="2*"></ColumnDefinition>
		  <ColumnDefinition Width="3*"></ColumnDefinition>
		  <ColumnDefinition Width="2*"></ColumnDefinition>
	  </Grid.ColumnDefinitions>
	  <Grid.RowDefinitions>
		  <RowDefinition></RowDefinition>
		  <RowDefinition></RowDefinition>
	  </Grid.RowDefinitions>
	  
	  <TextBlock Grid.Column="1" Grid.Row="0" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="ExtraBlack" FontSize="22" Margin="6" TextWrapping="Wrap" Text="YOU LOST TO A BOT, WOMP WOMP"></TextBlock>
	  
	  <!-- <Button Click="" Grid.Column="0" Grid.Row="1" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" ></Button> -->
	  <Image Grid.Column="1" Grid.Row="1" Source="/images/joever.png" />
	  <Button Click="GoToMenu" Grid.Column="2" Grid.Row="1" Content="Main Menu" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" ></Button>
  </Grid>
</Window>

